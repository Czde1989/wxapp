<!--index.wxml-->
<view class="container">
  <view class="userinfo" bindtap="bindViewTap">
    <image class="userinfo-avatar" src='{{userInfo.avatarUrl}}' background-size="cover"></image>
  </view>
  <view>
    <text class="userinfo-nickname">{{userInfo.nickName}}(czde)</text>
  </view>
  <view class="usermotto">
    <button type="default" size="{{primarySize}}" plain="{{plain}}" hover-class="button-hover"
    disabled="{{disabled}}" bindtap="toGame"> 2048小游戏 </button>
  </view>
</view>
